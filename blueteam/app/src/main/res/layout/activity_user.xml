<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:focusable="true"
        android:focusableInTouchMode="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView android:id="@+id/main_pic"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:layout_marginTop="50dp"
               android:src="@drawable/img1"
    ></ImageView>

<!--   level adjustment view -->
    <com.blueteam.view.AmountView
            android:id="@+id/amount_view"
            android:layout_width="wrap_content"
            android:layout_below="@id/main_pic"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="67dp"
            android:layout_marginLeft="25dp"
            android:layout_height="36dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            app:btnTextSize="14sp"
            app:btnWidth="36dp"
            app:tvWidth="50dp" android:layout_centerInParent="true"/>

<!--  confirm button  -->
    <Button android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_pic"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/amount_view"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="50dp"
            android:text="Confirm"
    ></Button>

</RelativeLayout>

