<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blueteam.BluetoothChat">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:orientation="vertical"
    >
<!--  https://www.spine-health.com/  -->
    <ImageButton
        android:id="@+id/spine_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spine_health"
        android:layout_weight="1"
        android:scaleType="fitXY"
        />


    <ImageButton
        android:id="@+id/workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/workout"
        android:scaleType="fitXY"
        />

    <ImageButton
        android:id="@+id/recovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/recovery"
        android:scaleType="fitXY"
        />
</LinearLayout>

</LinearLayout>
